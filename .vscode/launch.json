{
  "version": "0.2.0",
  "configurations": [
    {
      "name": ".NET Core Launch (shell)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/shell/bin/Debug/net8.0/BKB.dll",
      "args": [],
      "cwd": "${workspaceFolder}/shell",
      "console": "integratedTerminal",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
        "uriFormat": "%s"
      },
      "env": {},
      "sourceFileMap": {
        "/Views": "${workspaceFolder}/Views"
      }
    }
  ]
}